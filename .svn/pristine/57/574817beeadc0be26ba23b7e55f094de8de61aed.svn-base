

/*========================================= Toolbar related CSS ========================*/

.RadFileExplorer_Office2010Silver .RadToolBar .rtbText
{
	background-image: url('FileExplorer/FileExplorerToolbarSprites.png');
	background-repeat: no-repeat;
}

/* IE6 does not support the alpha channel of png files, so we force it to use gif */
* html .RadFileExplorer_Office2010Silver .RadToolBar .rtbText
{
	background-image: url('FileExplorer/FileExplorerToolbarSpritesIE6.gif') !important;
}

.RadFileExplorer_Office2010Silver .rgDataDiv
{
	background-color: #fff;
}

.RadFileExplorer_Office2010Silver, 
.RadFileExplorer_Office2010Silver .rfeAddressBox,
.RadFileExplorer_Office2010Silver .rfeFilterTxt
{
	border-color: #9aa0a6;
}

.DialogSeparator
{
    border-left: solid 1px #a4abb2;
    border-right: solid 1px #a4abb2;
    background-color: #dfe1e4;
}

div.selectedFileName
{
    border-top: solid 1px #a4abb2;
}

.RadFileExplorer_Office2010Silver .RadSplitter_Office2010Silver, 
.RadFileExplorer_Office2010Silver .RadSplitter_Office2010Silver .rspPaneTabContainer 
{
    border: none;
}

/* Overwrites padding for better presentation and space saving */
.RadFileExplorer_Office2010Silver .RadGrid .rgRow td, 
.RadFileExplorer_Office2010Silver .RadGrid .rgAltRow td, 
.RadFileExplorer_Office2010Silver .RadGrid .rgEditRow td, 
.RadFileExplorer_Office2010Silver .RadGrid .rgFooter td 
{
padding-left: 8px;
padding-right: 8px;
}

/* Thumbnail view */

.RadFileExplorer_Office2010Silver .rfeThumbList a:hover,
.RadFileExplorer_Office2010Silver .rfeThumbList .rfeSelectedLink,
.RadFileExplorer_Office2010Silver .rfeThumbList .rfeSelectedLink:hover
{
	background-image: url('../Common/Gradients/office2010Silver_smoothSprite_20.png');
	background-color: #fcf5d9;
	border-color:#fceaab;
}

.RadFileExplorer_Office2010Silver .rfeThumbList .rfeSelectedLink,
.RadFileExplorer_Office2010Silver .rfeThumbList .rfeSelectedLink:hover 
{
	background-color: #ffef7c;
}

/* Thumbnail filter */
.RadFileExplorer_Office2010Silver .rfeFilterContainer
{
	background-image: url('../Common/Gradients/office2010Silver_smoothSprite_20.png');
	background-color: #fcf5d9;
}