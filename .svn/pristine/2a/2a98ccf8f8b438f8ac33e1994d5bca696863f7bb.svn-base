#divContainerLoading {
    max-height:96vh;
    height:100%;
    max-width:97.9vw;
    width:100%;
    background:#eee;
    position: absolute;
    text-align:center;
    padding:20px;
    z-index:1005;
    top:0px;
    left:0px;
}

#grcLoader {
    width:80px;
    height:80px;
    background:#0046ad;
    position:relative;
    -webkit-animation: CounterRotate 5s infinite;
            animation: CounterRotate 5s infinite;
    top:45%;
    left:50%;
}

#grcInternalLoader {
    width:35px;
    height:35px;
    background:#eee;
    position:relative;
    top:22px;
    left:23px;
    -webkit-animation: Rotate 5s infinite;
            animation: Rotate 5s infinite;
    z-index:100;
}

#grcLoader:before {
    content: "";
    width:40px;
    height:0;
    position:absolute;
    top:0;
    left:0;
    border-bottom:29px solid #0046ad;
    border-left: 20px solid #eee;
    border-right: 20px solid #eee;
}

#grcInternalLoader:before {
    content: "";
    width:25px;
    height:0;
    position:absolute;
    top:0;
    left:0;
    border-bottom: 10px solid #eee;
    border-left: 5px solid #0046ad;
    border-right: 5px solid #0046ad;
}

#grcLoader:after{
    content: "";
    width:40px;
    height:0;
    position:absolute;
    bottom:0;
    left:0;
    border-top:29px solid #0046ad;
    border-left: 20px solid #eee;
    border-right: 20px solid #eee;
}

#grcInternalLoader:after {
    content: "";
    width:25px;
    height:0;
    position:absolute;
    bottom:0;
    left:0;
    border-top: 10px solid #eee;
    border-left: 5px solid #0046ad;
    border-right: 5px solid #0046ad;
}


@-webkit-keyframes Rotate {
    0% {
        -webkit-transform: rotate(-360deg);
                transform: rotate(-360deg);
    }
}


@keyframes Rotate {
    0% {
        -webkit-transform: rotate(-360deg);
                transform: rotate(-360deg);
    }
}

@-webkit-keyframes CounterRotate {
    0% {
        -webkit-transform:rotate(360deg);
                transform:rotate(360deg);
    }
}

@keyframes CounterRotate {
    0% {
        -webkit-transform:rotate(360deg);
                transform:rotate(360deg);
    }
}